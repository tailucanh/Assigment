<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Đăng kí</title>
  <link rel="stylesheet" href="/library/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="/library/fontawesome/css/all.min.css">
  <script src="/library/bootstrap/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="/css/fonts.css">
  <link rel="stylesheet" href="/css/sidebarHidden.css">
</head>

<body>
  <div class="container h-100  mb-4" id="register-content">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-2">
            <div class="row justify-content-around">
              <div class="col-md-10 col-lg-6 col-xl-6 order-2 order-lg-1">
                <p class="text-center h1 fw-semibold mb-2 mx-1 mx-md-3 mt-1 text-title-form">Đăng kí</p>
                <form class="mx-1 mx-md-4" enctype="multipart/form-data" method="POST">
                  <div class="d-flex flex-column align-items-center mb-3">
                    <img src="/images/logo.png" class="rounded-circle shadow-4 mb-1"
                      style="width: 90px; height: 90px; object-fit: cover;" alt="Avatar" id="view_avatar" />
                    <input class="form-control form-control-sm" id="avatar" type="file" name="avatar">
                  </div>
                  <div class="d-flex flex-row align-items-start mb-2">
                    <i class="fas fa-user fa-lg me-1 mt-2 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="form3Example1c">Họ và tên</label>
                      <input type="text" id="name" name="name" class="form-control" placeholder="Le Van A" required />
                      <p class="mx-2 mt-1 text-danger">{{errName}}</p>
                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-start mb-2">
                    <i class="fas fa-envelope fa-lg me-1 mt-2 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="form3Example3c">Email</label>
                      <input type="email" id="email" name="email" class="form-control" placeholder="abc@gmail.com"
                        required />
                      <p class="mx-2 mt-1 text-danger">{{errEmail}}</p>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-start mb-2">
                    <i class="fas fa-lock fa-lg me-1 mt-2 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label class="form-label" for="form3Example4c">Password</label>
                      <input type="password" id="password" name="password" class="form-control" required />
                      <p class="mx-2 mt-1  text-danger">{{errPass}}</p>
                    </div>
                  </div>


                  <div class="d-flex justify-content-center mx-4 mb-2 mb-lg-4">
                    <button type="submit" class="btn btn-primary shadow-sm  btn-lg">Đăng kí</button>
                  </div>

                </form>
              </div>
              <div class="col-md-10 col-lg-6 col-xl-6 d-flex justify-content-center order-1 order-lg-2">
                <img src="/images/ic_regiser.png" class="img-fluid" alt="Sample image">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script>
    const imageInput = document.getElementById('avatar');
    const imagePreview = document.getElementById('view_avatar');

    imageInput.addEventListener('change', function () {
      const file = imageInput.files[0];
      const reader = new FileReader();
      reader.addEventListener('load', function () {
        imagePreview.src = reader.result;
      });

      if (file) {
        reader.readAsDataURL(file);
      }
    });

  </script>
</body>

</html>